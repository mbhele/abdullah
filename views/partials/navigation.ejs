                <label for="deposit">Deposit:</label>
                <input type="number" id="deposit" value="0">
                <label for="tradeInValue">Trade-In Value:</label>
                <input type="number" id="tradeInValue" value="0">
                <label for="vat">VAT (%):</label>
                <input type="number" id="vat" value="15">
                <label for="interestRate">Interest Rate (%):</label>
                <input type="number" id="interestRate" value="13.25">
                <label for="repaymentPeriod">Repayment Period (Months):</label>
                <input type="number" id="repaymentPeriod" value="72">
                <button class="form-btn" type="button" onclick="calculateMonthlyPayment()">Update Payments</button>
            </form>
