    <script>
// JavaScript code

function openCalculator() {
        const calculatorModal = document.getElementById('calculatorModal');
        const overlay = document.getElementById('overlay');

        calculatorModal.style.display = 'block';
        calculatorModal.style.opacity = '1';
        overlay.style.display = 'block';
    }

    
function closeCalculator() {
        const calculatorModal = document.getElementById('calculatorModal');
        const overlay = document.getElementById('overlay');

        calculatorModal.style.opacity = '0';
        overlay.style.display = 'none';

        setTimeout(() => {
            calculatorModal.style.display = 'none';
        }, 300);
    }

function calculateMonthlyPayment() {
        const vehiclePrice = parseFloat(document.getElementById('vehiclePrice').value);
        const deposit = parseFloat(document.getElementById('deposit').value);
        const tradeInValue = parseFloat(document.getElementById('tradeInValue').value);
        const vat = parseFloat(document.getElementById('vat').value);
        const interestRate = parseFloat(document.getElementById('interestRate').value);
        const repaymentPeriod = parseFloat(document.getElementById('repaymentPeriod').value);

        const loanAmount = (vehiclePrice - deposit - tradeInValue) * (1 + vat / 100);
        const monthlyInterestRate = interestRate / 100 / 12;
        const denominator = Math.pow(1 + monthlyInterestRate, repaymentPeriod) - 1;

        const monthlyPayment = (loanAmount * monthlyInterestRate) / denominator;

        const resultElement = document.getElementById('monthlyPayment');
        resultElement.textContent = 'R ' + monthlyPayment.toFixed(2);
    }

    </script>
