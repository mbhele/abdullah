<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Add this link in your <head> section for Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://use.fontawesome.com/d6b504fbd4.js"></script>
    <title>Abdullah's Car Sales</title>
    <!-- <link rel="stylesheet" href="styles/partials/navigation.css"> -->

    <style>
        /* Existing styles... */

        body {
            zoom: 80%;
            font-family: Arial, sans-serif;
            margin: 20px;
            overflow-x: hidden;
        }

        button {
            padding: 10px;
            background-color: #485dff;
            color: white;
            border: none;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }

        #calculatorModal {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: #fff;
            padding: 30px;
            border: 1px solid #ccc;
            z-index: 1;
            max-width: 400px;
            width: 100%;
            opacity: 0;
            transition: all 0.3s ease;
            text-align: center;
        }

        .blacklisted {
            background-color: black;
            font-size: 16px;
            padding: 10px 10px;
            position: relative;
            top: -0.5rem;
            border-radius: 5px;
        }

        .blacklisted a {
            color: rgb(224, 202, 3);
            font-weight: bold;
        }

        #overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 0;
        }

        #calculatorModal h2 {
            margin-bottom: 20px;
        }

        #financeForm {
            max-height: 40vh;
            overflow-y: auto;
        }

        label {
            display: block;
            margin-bottom: 10px;
            text-align: left;
        }

        input {
            width: calc(100% - 20px);
            padding: 10px;
            margin-bottom: 20px;
            box-sizing: border-box;
        }

        #result {
            margin-top: 20px;
        }

        .form-btn {
            padding: 12px;
            background-color: #485dff;
            color: rgb(0, 0, 0);
            border: none;
            cursor: pointer;
        }

        .form-btn:hover {
            background-color: #485dff;
        }

        #contact-topinfo {
            color: #ffffff;
            text-align: left;
            padding: 10px;
            font-size: 16px;
            width: 100%;
            display: flex;
            justify-content: space-evenly;
            align-items: center;
            margin-bottom: 2rem;
        }

        #contact-topinfo h1 {
            margin: 3px 0;
            font-size: 20px;
        }

        #contact-topinfo p {
            margin: 3px 0;
        }

        #video-background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: -1;
            filter: brightness(30%);
        }

        #whatsap {
            position: fixed;
            left: 90%;
            top: 72%;
            width: 10%;
            height: 25vh;
        }

        nav {
            margin-top: -1rem;
            display: flex;
            justify-content: flex-end;
            align-items: center;
            margin-right: 3.5rem;
        }

        ul {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
        }

        li {
            margin: 0 15px;
        }

        a {
            text-decoration: none;
            color: white;
            font-weight: bold;
            font-size: 16px;
            transition: color 0.3s ease;
        }

        a:hover {
            color: #45a049;
        }

        #applyNowLink {
            text-decoration: none;
            font-weight: bold;
            font-size: 16px;
            padding: 10px 20px;
            color: white;
            border-radius: 5px;
            animation: colorChange 5s infinite;
        }

        @keyframes colorChange {
            0% {
                background-color: #740e02;
            }

            25% {
                background-color: #3498db;
            }

            50% {
                background-color: #9b1102;
            }

            75% {
                background-color: #3498db;
            }

            100% {
                background-color: #b10000;
            }
        }

        #applyNowLink:hover {
            background-color: #45a049;
        }

        #searchContainer {
            max-width: 100%;
            margin: 20px;
            padding: 20px;
            background-color: #3498db;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 8rem;
            width: 100%;
        }

        hr {
            border-color: #ffffff;
        }

        .filterDropdown {
            flex: 1;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #fff;
            font-size: 16px;
            color: #333;
            margin: 0 5px 10px 5px;
            transition: border-color 0.3s ease, background-color 0.3s ease;
            width: 60%;
        }

        .filterDropdown:hover {
            border-color: #3498db;
        }

        #searchButton {
            padding: 10px;
            background-color: #3498db;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        #searchButton:hover {
            background-color: #45a049;
        }

        .dropdownContainer {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            padding: 20px;
            border-radius: 10px;
        }

        .carCard {
            cursor: pointer;
            border: 1px solid #ccc;
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s ease;
            width: calc(25% - 20px);
            margin: 0;
            background-color: #ffffff;
        }

        .carCard:hover {
            transform: scale(1.05);
        }

        .carImage {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }

        .carDetails {
            padding: 10px;
            text-align: center;
        }

        .modal-content {
            text-align: center;
        }

        #imageGallery {
            display: flex;
            gap: 20px;
            width: 50%;
            margin: auto;
            margin-top: 10rem;
        }

        #imageGallery img {
            max-width: 100%;
            height: auto;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.9);
        }

        .close {
            position: absolute;
            top: 15px;
            right: 15px;
            font-size: 25px;
            color: #fff;
            cursor: pointer;
        }

        .close:hover {
            color: #aaa;
        }

        #loginContainer {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        #contact-topinfo {
            position: relative;
        }

        #logo {
            position: absolute;
            top: -9rem;
            left: 1rem;
            height: 116vh;
            max-height: 160px;
            margin-right: 5px;
            max-height: 350px;
            width: auto;
            max-width: 220px;
        }

        #phoneNumber {
            position: absolute;
            top: 0;
            right: 50px;
            background-color: #000;
            color: #ffd700;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: bold;
            font-size: 20px;
        }

        /* Position the phone number appropriately for the layout */
        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-right: 3.5rem;
        }
    </style>

</head>

<body>
    <div id="app">
        <div id="contact-topinfo">
            <div>
                <img src="https://carimages.com/carlogo.png" alt="Company Logo" id="logo">
                <h1>Abdullah's Car Sales</h1>
                <p>Welcome to our car sales website!</p>
            </div>
        </div>

        <nav>
            <ul>
                <li><a href="#home">Home</a></li>
                <li><a href="#inventory">Inventory</a></li>
                <li><a href="#about">About Us</a></li>
                <li><a href="#contact">Contact</a></li>
                <li><a href="#applyNow" id="applyNowLink">Apply Now</a></li>
            </ul>
            <!-- Phone number placed at the end of the navigation menu -->
            <div id="phoneNumber"><i class="fa fa-phone"></i> (123) 456-7890</div>
        </nav>

        <!-- Video background element -->
        <video id="video-background" autoplay loop muted>
            <source src="video.mp4" type="video/mp4">
        </video>

        <div id="searchContainer">
            <!-- Content for search container -->
            <div class="dropdownContainer">
                <select class="filterDropdown">
                    <option value="">Select Make</option>
                    <option value="Toyota">Toyota</option>
                    <option value="Honda">Honda</option>
                    <!-- More options... -->
                </select>

                <select class="filterDropdown">
                    <option value="">Select Model</option>
                    <option value="Corolla">Corolla</option>
                    <option value="Civic">Civic</option>
                    <!-- More options... -->
                </select>

                <select class="filterDropdown">
                    <option value="">Select Year</option>
                    <option value="2022">2022</option>
                    <option value="2021">2021</option>
                    <!-- More options... -->
                </select>

                <select class="filterDropdown">
                    <option value="">Select Price Range</option>
                    <option value="10000">$10,000 - $20,000</option>
                    <option value="20000">$20,000 - $30,000</option>
                    <!-- More options... -->
                </select>
            </div>
            <button id="searchButton">Search</button>
        </div>

        <div id="imageGallery">
            <div class="carCard">
                <img src="car1.jpg" alt="Car 1" class="carImage">
                <div class="carDetails">
                    <h3>Car 1</h3>
                    <p>$20,000</p>
                </div>
            </div>
            <div class="carCard">
                <img src="car2.jpg" alt="Car 2" class="carImage">
                <div class="carDetails">
                    <h3>Car 2</h3>
                    <p>$25,000</p>
                </div>
            </div>
            <!-- More car cards... -->
        </div>
    </div>

    <!-- JavaScript code to handle modal opening/closing -->
    <script>
        // JavaScript code to handle modal opening/closing
        function openModal() {
            document.getElementById('calculatorModal').style.display = 'block';
            document.getElementById('overlay').style.display = 'block';
            setTimeout(() => {
                document.getElementById('calculatorModal').style.opacity = '1';
            }, 10);
        }

        function closeModal() {
            document.getElementById('calculatorModal').style.opacity = '0';
            setTimeout(() => {
                document.getElementById('calculatorModal').style.display = 'none';
                document.getElementById('overlay').style.display = 'none';
            }, 300);
        }
    </script>

</body>

</html>
