<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Finance Application Form</title>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <style>
      body {
            font-family: Arial, sans-serif;
            background-color: #000000;
            margin: 0;
            padding: 0;
            zoom: 80%;
            color: #ffffff;
        }

        h2, h3 {
            color: #ff9900;
        }

        form {
            max-width: 600px;
            margin: 20px auto;
            background-color: #333333;
            padding: 20px;
            border-radius: 10px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            color: #ff9900;
        }

        input, select {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            box-sizing: border-box;
        }

        button {
            background-color: #ff9900;
            color: #000000;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #e68a00;
        }
    </style>
</head>
<body>
    <%- include ('./partials/navigation.ejs') %>
   



  
        <h2 style="text-align: center;" >Motorlease Application Form</h2>
    
        <form action="#" method="post">
            <!-- Personal Details -->
            <h3>Personal Details</h3>
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" required>
            <br>
            <label for="middleName">Middle Name:</label>
            <input type="text" id="middleName" name="middleName" required>
            <br>
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" required>
            <br>
            <label for="idNumber">ID Number:</label>
            <input type="text" id="idNumber" name="idNumber" required>
    
            <!-- Vehicle & Finance Details -->
            <h3>Vehicle & Finance Details</h3>
            <label for="yearModel">Year Model:</label>
            <input type="text" id="yearModel" name="yearModel" required>
            <br>
            <label for="make">Make of Vehicle:</label>
            <input type="text" id="make" name="make" required>
            <br>
            <label for="modelDescription">Model & Vehicle Description:</label>
            <input type="text" id="modelDescription" name="modelDescription" required>
            <br>
            <label for="price">Price of Vehicle:</label>
            <input type="text" id="price" name="price" required>
            <br>
            <label for="currentMileage">Current Milage:</label>
            <input type="text" id="currentMileage" name="currentMileage" required>
            <br>
            <label for="color">Colour:</label>
            <input type="text" id="color" name="color" required>
            <br>
            <label for="payInAdvance">Pay in Advance?</label>
            <select id="payInAdvance" name="payInAdvance" required>
                <option value="Yes">Yes</option>
                <option value="No">No</option>
            </select>
            <br>
            <label for="repaymentPeriod">Repayment Period:</label>
            <select id="repaymentPeriod" name="repaymentPeriod" required>
                <option value="24">24 months</option>
                <option value="36">36 months</option>
                <option value="48">48 months</option>
                <option value="54">54 months</option>
                <option value="60">60 months</option>
                <option value="72">72 months</option>
            </select>
            <br>
            <label for="rateIndicator">Rate Indicator:</label>
            <select id="rateIndicator" name="rateIndicator" required>
                <option value="Linked Interest Rate">Linked Interest Rate</option>
                <option value="Fixed Interest Rate">Fixed Interest Rate</option>
            </select>
            <br>
            <label for="depositTradeIn">Deposit / Trade In:</label>
            <input type="text" id="depositTradeIn" name="depositTradeIn" required>
            <br>
            <label for="depositAmount">Deposit Amount:</label>
            <input type="text" id="depositAmount" name="depositAmount" required>
    
            <!-- Personal Details (Continued) -->
            <h3>Personal Details (Continued)</h3>
            <label for="preferredLanguage">Preferred Language:</label>
            <select id="preferredLanguage" name="preferredLanguage" required>
                <option value="English">English</option>
                <option value="Afrikaans">Afrikaans</option>
            </select>
            <br>
        <label for="gender">Gender:</label>
        <select id="gender" name="gender" required>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
            <br>
            <label for="title">Title:</label>
        <select id="title" name="title" required>
            <option value="Mr">Mr</option>
            <option value="Miss">Miss</option>
            <option value="Mrs">Mrs</option>
            <option value="Dr">Dr</option>
        </select>
            <br>
            <label for="race">Race/Ethnic Group:</label>
        <select id="race" name="race" required>
            <option value="Black">Black</option>
            <option value="Coloured">Coloured</option>
            <option value="Asian">Asian</option>
            <option value="White">White</option>
            <option value="Other">Other</option>
        </select>
            <br>
            <label for="maritalStatus">Marital Status:</label>
            <select id="maritalStatus" name="maritalStatus" required>
                <option value="Single">Single</option>
                <option value="Married">Married</option>
                <option value="Divorced">Divorced</option>
                <option value="Widow/er">Widow/er</option>
            </select>
            <br>
            <label for="nationality">Country of Nationality:</label>
            <input type="text" id="nationality" name="nationality" required>
            <br>
           
            <!-- Marital Contract -->
        <label for="maritalContract">Marital Contract:</label>
        <select id="maritalContract" name="maritalContract" required>
            <option value="Antenuptial Contract">Antenuptial Contract</option>
            <option value="In Community of Property">In Community of Property</option>
            <option value="Tribal">Tribal</option>
            <option value="Not Applicable">Not Applicable</option>
        </select>
            <br>
            <label for="dateMarried">Date Married:</label>
            <input type="text" id="dateMarried" name="dateMarried" required>
            <br>
            <br>
            <label for="cellNumber">Cell Number:</label>
            <input type="text" id="cellNumber" name="cellNumber" required>
            <br>
            <label for="homeNumber">Home Number:</label>
            <input type="text" id="homeNumber" name="homeNumber" required>
            <br>
            <label for="workNumber">Work Number:</label>
            <input type="text" id="workNumber" name="workNumber" required>
            <br>
            <label for="emailAddress">Email Address:</label>
            <input type="text" id="emailAddress" name="emailAddress" required>
            <br>
            <label for="countryOfBirth">Country of Birth:</label>
            <input type="text" id="countryOfBirth" name="countryOfBirth" required>
            <br>
            <label for="multipleNationalities">Do you have multiple nationalities?</label>
            <select id="multipleNationalities" name="multipleNationalities" required>
                <option value="Yes">Yes</option>
                <option value="No">No</option>
            </select>
            <br>
            <label for="taxObligations">Do you have tax obligations, tax liabilities, or tax residencies outside of South Africa?</label>
            <select id="taxObligations" name="taxObligations" required>
                <option value="Yes">Yes</option>
                <option value="No">No</option>
            </select>
            <br>
            <label for="countryOfResidence">Country of Residence:</label>
            <input type="text" id="countryOfResidence" name="countryOfResidence" required>
    
            <!-- Residential Details -->
            <h3>Residential Details</h3>
            <label for="currentAddress">Current Address:</label>
            <input type="text" id="currentAddress" name="currentAddress" required>
            <br>
            <label for="ownerTenantLodger">Owner/Tenant/Lodger:</label>
            <input type="text" id="ownerTenantLodger" name="ownerTenantLodger" required>
            <br>
            <label for="jointBond">Is this a Joint Bond (If bonded):</label>
            <select id="jointBond" name="jointBond" required>
<option value="Yes">Yes</option>
<option value="No">No</option>
</select>
<br>
<label for="percentageJointBond">Percentage of Joint Bond:</label>
<input type="text" id="percentageJointBond" name="percentageJointBond" required>
<br>
<label for="periodAtCurrentAddress">Period at Current Address:</label>
<input type="text" id="periodAtCurrentAddress" name="periodAtCurrentAddress" required>
      <!-- Employment Details -->
    <h3>Employment Details</h3>
    <label for="employerName">Employer Name:</label>
    <input type="text" id="employerName" name="employerName" required>
    <br>
    <label for="occupation">Occupation:</label>
    <input type="text" id="occupation" name="occupation" required>
    <br>
    <label for="employerIndustryType">Employer Industry Type:</label>
    <input type="text" id="employerIndustryType" name="employerIndustryType" required>
    <br>
    <label for="employmentType">Employment Type:</label>
    <input type="text" id="employmentType" name="employmentType" required>
    <br>
    <label for="employmentLevel">Employment Level:</label>
    <input type="text" id="employmentLevel" name="employmentLevel" required>
    <br>
    <label for="clientType">Client Type:</label>
    <input type="text" id="clientType" name="clientType" required>
    <br>
    <label for="employerAddress">Employer Address:</label>
    <input type="text" id="employerAddress" name="employerAddress" required>
    <br>
    <label for="timeAtCurrentEmployment">Time at Current Employment:</label>
    <input type="text" id="timeAtCurrentEmployment" name="timeAtCurrentEmployment" required>
    <br>
    <label for="dateOnWhichPaid">Date on Which You Are Paid:</label>
    <input type="text" id="dateOnWhichPaid" name="dateOnWhichPaid" required>

    <!-- Applicant Income Details -->
    <h3>Applicant Income Details</h3>
    <label for="grossRemuneration">Gross Remuneration:</label>
    <input type="text" id="grossRemuneration" name="grossRemuneration" required>
    <br>
    <label for="monthlyCommission">Monthly Commission (Inc in Gross):</label>
    <input type="text" id="monthlyCommission" name="monthlyCommission" required>
    <br>
    <label for="carAllowance">Car Allowance (Inc in Gross):</label>
    <input type="text" id="carAllowance" name="carAllowance" required>
    <br>
    <label for="overtime">Overtime (Inc in Gross):</label>
    <input type="text" id="overtime" name="overtime" required>
    <br>
    <label for="netIncome">Net Income:</label>
    <input type="text" id="netIncome" name="netIncome" required>
    <br>
    <label for="rentalIncome">Rental Income:</label>
    <input type="text" id="rentalIncome" name="rentalIncome" required>
    <br>
    <label for="maintenanceIncome">Maintenance Income:</label>
    <input type="text" id="maintenanceIncome" name="maintenanceIncome" required>
    <br>
    <label for="otherIncome">Other Income:</label>
    <input type="text" id="otherIncome" name="otherIncome" required>
    <br>
    <label for="totalMonthlyIncome">Total Monthly Income:</label>
    <input type="text" id="totalMonthlyIncome" name="totalMonthlyIncome" required>

    <!-- Applicant Expenses -->
    <h3>Applicant Expenses</h3>
    <label for="bondPayment">Bond Payment:</label>
    <input type="text" id="bondPayment" name="bondPayment" required>
    <br>
    <label for="rentPayment">Rent Payment:</label>
    <input type="text" id="rentPayment" name="rentPayment" required>
    <br>
    <label for="ratesWaterElectricity">Rates, Water & Electricity:</label>
    <input type="text" id="ratesWaterElectricity" name="ratesWaterElectricity" required>
    <br>
    <label for="vehicleInstalments">Vehicle Instalments:</label>
    <input type="text" id="vehicleInstalments" name="vehicleInstalments" required>
    <br>
    <label for="personalLoanRepayments">Personal Loan Repayments:</label>
    <input type="text" id="personalLoanRepayments" name="personalLoanRepayments" required>
    <br>
    <label for="creditCardsRepayments">Credit Cards Repayments:</label>
    <input type="text" id="creditCardsRepayments" name="creditCardsRepayments" required>
    <br>
    <label for="furnitureAccounts">Furniture Accounts:</label>
    <input type="text" id="furnitureAccounts" name="furnitureAccounts" required>
    <br>
    <label for="clothingAccounts">Clothing Accounts:</label>
    <input type="text" id="clothingAccounts" name="clothingAccounts" required>
    <br>
    <label for="overdraftRepayments">Overdraft Repayments:</label>
    <input type="text" id="overdraftRepayments" name="overdraftRepayments" required>
    <br>
    <label for="policyInsuranceRepayments">Policy / Insurance Repayments:</label>
    <input type="text" id="policyInsuranceRepayments" name="policyInsuranceRepayments" required>
    <br>
    <label for="telephone">Telephone:</label>
    <input type="text" id="telephone" name="telephone" required>
    <br>
    <label for="transport">Transport:</label>
    <input type="text" id="transport" name="transport" required>
    <br>
    <label for="foodEntertainment">Food & Entertainment:</label>
    <input type="text" id="foodEntertainment" name="foodEntertainment" required>
    <br>
    <label for="education">Education:</label>
    <input type="text" id="education" name="education" required>
    <br>
    <label for="maintenance">Maintenance:</label>
    <input type="text" id="maintenance" name="maintenance" required>
    <br>
    <label for="householdExpenses">Household Expenses:</label>
    <input type="text" id="householdExpenses" name="householdExpenses" required>
    <br>
    <label for="otherExpenses">Other Expenses:</label>
    <input type="text" id="otherExpenses" name="otherExpenses" required>
    <br>
    <label for="totalMonthlyExpenses">Total Monthly Expenses:</label>
    <input type="text" id="totalMonthlyExpenses" name="totalMonthlyExpenses" required>

    <!-- Liability Details -->
    <h3>Liability Details</h3>
    <label for="surety">Surety:</label>
    <select id="surety" name="surety" required>
        <option value="Yes">Yes</option>
        <option value="No">No</option>
    </select>
    <br>
    <label for="guarantor">Guarantor:</label>
    <select id="guarantor" name="guarantor" required>
        <option value="Yes">Yes</option>
        <option value="No">No</option>
    </select>
    <br>
    <label for="coDebtor">Co-Debtor:</label>
    <select id="coDebtor" name="coDebtor" required>
        <option value="Yes">Yes</option>
        <option value="No">No</option>
    </select>


    <!-- Continue from the previous code -->

        <!-- Consent -->
        <h3>Consent</h3>
        <label for="consent">I have agreed and given my consent</label>
        <input type="checkbox" id="consent" name="consent" required>

        <!-- Submit Button -->
        <br>
        <button type="submit">Submit Application</button>
    </form>
</body>
</html>
