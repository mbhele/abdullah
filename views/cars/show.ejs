<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Details</title>

    <!-- Fotorama CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.css" rel="stylesheet">
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <style>

body {
            background-color: #000000;
            margin: 0;
            font-family: Arial, sans-serif;
         
        }

        .row {
            display: flex;
            justify-content: center;
        }

        .centeri {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 150px;
        max-width: 800px; /* Adjust the maximum width based on your preference */
        margin: 0 auto;
        padding: 20px;
        transform: scale(0.9);
        position: relative;
        top: -80px;
      
    }

        .fotorama {
            width: 140%;
            max-width: 600px;
            margin-top: 2.4rem;
        }

       
    .contact-form {
        max-width: 400px; /* Adjust the maximum width based on your preference */
        margin: 20px auto;
        padding: 20px;
        background-color: #333;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        color: #fff;
        /* margin-bottom: -50rem; */
    }

        .contact-form h2 {
            color: #25d366;
            margin-bottom: 20px;
        }

        .contact-form p {
            font-size: 1.1em;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .contact-form label {
            display: block;
            margin-top: 10px;
            color: #25d366;
        }

        .contact-form input,
        .contact-form select,
        .contact-form textarea {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            margin-bottom: 15px;
            border: 1px solid #25d366;
            border-radius: 4px;
            background-color: #444;
            color: #fff;
        }

        .contact-form button {
            background-color: #25d366;
            color: #fff;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1.2em;
        }

        .contact-form button:hover {
            background-color: #128c7e;
        }

        /* Responsive Styles */
        @media (max-width: 768px) {
            .centeri {
                grid-template-columns: 1fr; /* Stack on smaller screens */
            }

            .contact-form {
                margin: 20px auto;
            }
        }   /* ... Your existing styles ... */
    </style>
</head>

<body>
    <%- include ('../partials/navigation.ejs') %>
    <p style="text-align: center; color: rgb(255, 255, 255);"> <%= name %></p>
    <p style="text-align: center; color: white;"> <%= subject %></p>
    <div class="row">
        <div class="centeri">
            <!-- Fotorama -->
            <div class="fotorama" data-nav="thumbs" data-allowfullscreen="true">
                <% car.image.forEach(function(img) { %>
                    <a href="<%= img.url %>">
                        <img src="<%= img.url %>" alt="<%= name %>'s Image">
                    </a>
                <% }); %>
            </div>
            <!-- Contact Form -->
            <div class="contact-form">
              <h2>Contact Asif</h2>
              <p>27 72 657 * **** <br> </p>
              <a href="https://wa.me/<YOUR_WHATSAPP_NUMBER>" target="_blank">
                <button type="button">WhatsApp the Dealer</button>
            </a>
            <form action="/cars/<%= car._id %>/send-message" method="post">
                  <label for="name">Name *</label>
                  <input type="text" id="name" name="name" required>
          
                  <label for="email">Email *</label>
                  <input type="email" id="email" name="email" required>
          
                  <label for="mobile">Mobile *</label>
                  <input type="tel" id="mobile" name="mobile" required>
          
                  <label for="area">Area *</label>
                  <select id="area" name="area" required>
                      <option value="" disabled selected>Select your area</option>
                      <option value="area1">Area 1</option>
                      <option value="area2">Area 2</option>
                      <!-- Add more options as needed -->
                  </select>
          
                  <label for="message">Message</label>
                  <textarea id="message" name="message" rows="4"></textarea>
          
                  <button type="submit">Send Message</button>
              </form>
          </div>
        </div>

        <!-- Display other details -->
        <% if (currentUser && currentUser._id.toString() === car.author._id.toString()) { %>
            <form action="/cars/<%= car._id %>" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="delete-button">Delete Car</button>
            </form>
        <% } %>

        <!-- Edit Button -->
        <% if (currentUser && currentUser._id.toString() === car.author._id.toString()) { %>
            <a href="/cars/<%= car._id %>/edit" class="edit-button">Edit Car</a>
        <% } %>
    </div>

        <!-- Edit Car button (if the current user owns the car) -->
        <!-- ... Your existing buttons ... -->
    </div>
    <%- include ('../partials/footer.ejs') %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.js"></script>

    <script>
        $(document).ready(function () {
            // Custom navigation buttons functionality
            var fotorama = $('.fotorama').fotorama().data('fotorama');

            $('#prevButton').on('click', function () {
                fotorama.show('<');
            });

            $('#nextButton').on('click', function () {
                fotorama.show('>');
            });
        });
    </script>
</body>

</html>

